    "summary": [
      {
        "type": "paragraph",
        "text": "An argument made through coercion or threats of force to support position.",
        "spans": []
      }
    ],
    "description": [
      {
        "type": "paragraph",
        "text": "Appeal to Force refers to the use of force and, by extension, the use of threats of force, or intimidation, to \"win\" an argument by preventing the other side from presenting its case.",
        "spans": [
          {
            "start": 0,
            "end": 15,
            "type": "em"
          },
          {
            "start": 120,
            "end": 128,
            "type": "hyperlink",
